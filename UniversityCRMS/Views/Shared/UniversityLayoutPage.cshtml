                <li>@Html.ActionLink("Save Dept", "SaveDepartment", "Department")</li>
                <li>@Html.ActionLink("Departments", "ViewDepartment", "Department")</li>
            </div>
        </div>
        <div class="dropdown">
            <button class="dropbtn">Course</button>
            <div class="dropdown-content">
                @*<a href="#">Link 1</a>*@
