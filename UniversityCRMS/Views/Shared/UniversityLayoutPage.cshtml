                <a>@Html.ActionLink("Save Course", "SaveCourse", "Course")</a>
            </div>
        </div>
        <div class="dropdown">
            <button class="dropbtn">Teacher</button>
            <div class="dropdown-content">
                @*<a href="#">Link 1</a>*@
                <a>@Html.ActionLink("Save Teacher", "SaveTeacher", "Teacher")</a>
                <a>@Html.ActionLink("Assign Course", "AssignCourse", "Teacher")</a>
            </div>
        </div>
        <div class="dropdown">
            <button class="dropbtn">Student</button>
            <div class="dropdown-content">
